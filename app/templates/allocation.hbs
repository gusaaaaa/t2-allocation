{{#unless vacation}}
  {{#each conflict in conflicts}}
    {{render "conflict" conflict}}
  {{/each}}
{{/unless}}

<div class="allocation-content" {{bind-attr title="hint"}}>
  {{#if person}}
    <span class="allocation-identifier">{{ person.name }}</span>
  {{else}}
    <span class="allocation-identifier">{{ role }}</span>
  {{/if}}

  {{#if office}}
    <em>({{office.name}})</em>
  {{/if}}

  {{#if isPartial}}
    <span>@{{percentAllocated}}%</span>
  {{/if}}
  <span class="allocation-range">
    {{ short-date startDate }} - {{ short-date endDate }}
    {{#if speculative}}
      ({{likelihood}})
    {{/if}}
  </span>
</div>
